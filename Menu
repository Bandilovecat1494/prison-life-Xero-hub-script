local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"))()

local gui = Library:create{
    Theme = Library.Themes.Aqua
}

local tab = gui:tab{
    Icon = "rbxassetid://8569322850",
    Name = "Others"
}
local Item = gui:tab{
    Icon = "rbxassetid://8569329439",
    Name = "Items"
}
local Mod = gui:tab{
    Icon = "rbxassetid://8498691140",
    Name = "Mods"
}

Item:button({
    Name = "Get Knife",
    Callback = function()
        workspace.Remote.ItemHandler:InvokeServer(workspace.Prison_ITEMS.single["Crude Knife"].ITEMPICKUP)
    end
})
Item:button({
    Name = "Get AK",
    Callback = function()
        workspace.Remote.ItemHandler:InvokeServer(workspace.Prison_ITEMS.giver["AK-47"].ITEMPICKUP)
    end
})
Mod:button({
    Name = "Mod AK [Require AK to not be in hands]",
    Callback = function()
            local player = game:GetService("Players").LocalPlayer
local gun = player.Backpack:FindFirstChild("AK-47")
local sM = require(gun:FindFirstChild("GunStates"))
sM["Damage"] = 100
sM["MaxAmmo"] = 9999991
sM["StoredAmmo"] = 9999991
sM["FireRate"] = 0.05
sM["AmmoPerClip"] = 9999991
sM["Range"] = 5000
sM["ReloadTime"] = 0.05
sM["Bullets"] = 1
sM["AutoFire"] = true
    end
})
Item:button({
    Name = "Get Remington 870",
    Callback = function()
        workspace.Remote.ItemHandler:InvokeServer(workspace.Prison_ITEMS.giver["Remington 870"].ITEMPICKUP)
